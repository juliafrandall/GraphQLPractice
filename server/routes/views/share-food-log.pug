h3(style={'font-family':'Arial, Helvetica, "Sans-serif"', 'color':'#000'}) #{user.first_name}'s Food Log from #{moment(dates[0]).format('MM/DD/YY')} to #{moment(dates[1]).format('MM/DD/YY')}

each date in dates
  div(style={'width':'450px', 'background-color':'#eee', 'font-family':'Arial, Helvetica, "Sans-serif"'})
    div(style={'padding': '10px 15px', 'color':'#000'})
      span
        strong=moment(date).format('ddd')
      =' '
      span=moment(date).format('MM/DD/YY')
      =' '
      span(style={'float':'right'}) #{Math.round(nutrientsByDates[date][208])} Cal intake
    table(style={'border-collapse':'collapse', 'width':'100%', 'margin':'0', 'font-size':'12px'})
      tr
        td(style={'border': '1px solid #ccc', 'padding': '5px', 'text-align':'center', 'width':'25%', 'color':'#0073E6'}) #{Math.round(nutrientsByDates[date][203])}g
          span(style={'color':'#002e5c'})  Protein
        td(style={'border': '1px solid #ccc', 'padding': '5px', 'text-align':'center', 'width':'25%', 'color':'#0073E6'}) #{Math.round(nutrientsByDates[date][205])}g
          span(style={'color':'#002e5c'})  Carb
        td(style={'border': '1px solid #ccc', 'padding': '5px', 'text-align':'center', 'width':'25%', 'color':'#0073E6'}) #{Math.round(nutrientsByDates[date][204])}g
          span(style={'color':'#002e5c'})  Fat
        td(style={'border': '1px solid #ccc', 'padding': '5px', 'text-align':'center', 'width':'25%', 'color':'#0073E6'}) #{Math.round(nutrientsByDates[date][307])}mg
          span(style={'color':'#002e5c'})  Sodium

  table(style={'width':'450px', 'border-collapse':'collapse', 'list-style':'none', 'margin':'0 0 15px 0', 'padding':'0', 'font-family':'Arial, Helvetica, "Sans-serif"'})
    each food in foodsByDates[date]
      tr(style={'border-bottom': '1px solid #ccc'})
        td(style={'border-bottom': '1px solid #ccc', 'vertical-align':'middle', 'width':'42px'})
          img(src=food.photo.thumb style={'width': '35px'})
        td(style={'border-bottom': '1px solid #ccc','color':'#000'})
          span=food.food_name
          if food.brand_name
            span=food.brand_name
          =' '
          span(style={'display':'block', 'color':'#999', 'font-size':'11px'}) #{food.serving_qty || 1} #{food.serving_unit || 'Serving'}
        td(style={'border-bottom': '1px solid #ccc', 'width':'50px', 'text-align':'right', 'color':'#28A54C', 'padding':'7px 10px 7px 0'})
          =Math.round(food.nf_calories)
          span(style={'color':'#999', 'font-size':'12px', 'display':'block'}) Cal




